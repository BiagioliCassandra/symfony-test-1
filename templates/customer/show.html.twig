{% extends 'layout.html.twig' %}

{% block title %}Clients{% endblock %}

{% block main %}
    <div class="w-50 m-auto">
        <h1>Clients</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ customer.id }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ customer.firstName }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ customer.lastName }}</td>
                </tr>
                <tr>
                    <th>Date d'anniversaire</th>
                    <td>{{ customer.birthDate ? customer.birthDate|date('d-m-y') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-primary" href="{{ path('customer_index') }}">Retour à la liste</a>

        <a class="btn btn-primary" href="{{ path('customer_edit', {'id': customer.id}) }}">Modifier</a>

        {{ include('customer/_delete_form.html.twig') }}

    </div>
{% endblock %}
